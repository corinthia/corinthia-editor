{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build",
        "sourceMap": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "src/autoCorrect.ts",
        "src/changeTracking.ts",
        "src/clipboard.ts",
        "src/collections.ts",
        "src/cursor.ts",
        "src/definitions.ts",
        "src/dom.ts",
        "src/editor.ts",
        "src/elementTypes.ts",
        "src/equations.ts",
        "src/figures.ts",
        "src/first.ts",
        "src/formatting.ts",
        "src/hierarchy.ts",
        "src/input.ts",
        "src/lists.ts",
        "src/main.ts",
        "src/markdown.ts",
        "src/metadata.ts",
        "src/outline.ts",
        "src/paragraph.ts",
        "src/position.ts",
        "src/postponedActions.ts",
        "src/preview.ts",
        "src/range.ts",
        "src/scan.ts",
        "src/selection.ts",
        "src/styles.ts",
        "src/tables.ts",
        "src/text.ts",
        "src/traversal.ts",
        "src/types.ts",
        "src/undo.ts",
        "src/util.ts",
        "src/viewport.ts",
        "tests/autoCorrectTests.ts",
        "tests/figuresTests.ts",
        "tests/inputTests.ts",
        "tests/outlineTests.ts",
        "tests/positionTests.ts",
        "tests/prettyPrinter.ts",
        "tests/rangeTests.ts",
        "tests/scanTests.ts",
        "tests/tableTests.ts",
        "tests/testharness.ts",
        "tests/testlib.ts",
        "tests/textTests.ts",
        "tests/undoTests.ts",
        "tests/validPositions.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
